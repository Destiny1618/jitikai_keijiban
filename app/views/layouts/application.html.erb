



<html>
  <head>
    <title>JitikaiKeijiban</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <% if customer_signed_in? %>
      <li>
        <%= link_to "HOME", public_topics_path %>
      </li>
    <% unless current_customer.guest? %>
    　<li>
        <%= link_to "掲示板に投稿", new_post_path %>
      </li>
    　<li>
        <%= link_to "イベントに投稿", new_event_path %>
      </li>
      <li>
        <%= link_to 'マイページ', customer_path(current_customer.id) %>
      </li>
    <% end %>
      <li>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "新規登録", new_customer_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_customer_session_path %>
      </li>
    <% end %>
    <% if customer_signed_in? %>
      <div class="search_form">
        <%= form_with url: search_path, local: true, method: :get do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, options_for_select([['Post'], ['Event'],['Jitikai'],['Dust']]) %>
          <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
          <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
  </header>
    <%= yield %>
  </body>
</html>
