<div>
  <p><%= @event.title %></p>
  <p><%= @event.body %></p>
  <% if @event.image.attached? %>
    <%= image_tag @event.get_image %>
  <% end %>
  <% if @event.customer.present? %>
  <p>投稿者：<%= @event.customer.nickname %></p>
  <% else %>
  <p>投稿者：<%= @event.admin.name %></p>
  <% end %>
  <p>投稿日：<%= @event.created_at.strftime('%Y/%m/%d') %></p>
  <% if @event.admin == current_admin %>
    <td><%= link_to "編集", edit_admin_event_path(@event.id) %></td>
    <td><%= link_to "削除", admin_event_path(@event), method: :delete %></td>
  <% end %>
  <div id="favorite-<%= @event.id %>">
  <%= render 'admin/events/favorite', event: @event %>
  </div>
</div>
<div id="comment_count-<%= @event.id %>">
  <%= render 'admin/events/comment_count', event: @event %>
</div>
<div id="comment-<%= @event.id %>">
  <%= render 'admin/events/comment', event: @event, event_comment: @event_comment %>
</div>