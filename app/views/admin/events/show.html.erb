<div>
  <p><%= @event.title %></p>
  <p><%= @event.body %></p>
  <% if @event.image.attached? %>
    <%= image_tag @event.get_image %>
  <% end %>
  <% if @event.customer.present? %>
  <p>投稿者：<%= @event.customer.nickname %></p>
  <% else %>
  <p>投稿者：<%= @event.admin.name %></p>
  <% end %>
  <p>投稿日：<%= @event.created_at.strftime('%Y/%m/%d') %></p>
  <% if @event.admin == current_admin %>
    <td><%= link_to "編集", edit_admin_event_path(@event.id) %></td>
    <td><%= link_to "削除", admin_event_path(@event), method: :delete %></td>
  <% end %>
  <div id="favorite-<%= @event.id %>">
  <%= render 'admin/events/favorite', event: @event %>
  </div>
</div>
<div id="comment_count-<%= @event.id %>">
  <%= render 'admin/events/comment_count', event: @event %>
</div>
<div id="comment-<%= @event.id %>">
  <%= render 'admin/events/comment', event: @event, event_comment: @event_comment %>
</div>













<div class="container mt-5">
  <div class='row justify-content-center'>
    <div class="col-md-10">

      <h3 class="mx-auto headline">マイページ</h3>

        <div class='row '>
          <div class="col-md-3 d-flex mt-3 mb-2 justify-content-between align-items-center">
            <h4 class="mb-0">登録情報</h4>
            <%= link_to "編集する", edit_customer_path, class: "btn d-flex align-items-center ms-3 btn-success" %>
          </div>
        </div>
        <div class='row'>
          <div class="mt-3">
            <table class="table table-bordered border-dark table-hover table-inverse custom-table">
              <tbody>
                <tr>
                  <th>氏名</th>
                  <td><%= @customer.name %></td>
                </tr>
                <tr>
                  <th>ニックネーム</th>
                  <td><%= @customer.nickname %></td>
                </tr>
                <tr>
                  <th>電話番号</th>
                  <td><%= @customer.telephone_number %></td>
                </tr>
                <tr>
                  <th>メールアドレス</th>
                  <td><%= @customer.email %></td>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="col-md-3 d-flex mt-3 mb-2 justify-content-between align-items-stretch">
            <h4 class="mb-0">自身の投稿</h4>
              <div class='row'>
                <div class="mt-3">
                  <table class="table">
                    <tbody>
                      <% @posts.each do |post| %>
                        <div><%= link_to "#{post.title} ", post_path(post.id) %></div>
                      <% end %>
                      <% @events.each do |event| %>
                        <div><%= link_to "#{event.title} ", event_path(event.id) %></div>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>


          <div class="col-md-3 d-flex mt-3 mb-2 justify-content-between align-items-stretch">
            <h4 class="mb-0">お気に入り</h4>
              <div class='row'>
                <div class="mt-3">
                  <table class="table">
                    <tbody>
                      <% @customer.favorite_posts.each do | post| %>
                          <div>----<%= post.title %>----</div>
                      <% end %>
                      <% @customer.favorite_events.each do | event| %>
                          <div>----<%= event.title %>----</div>
                      <% end %>
                      <% @customer.favorite_jitikais.each do | jitikai| %>
                          <div>----<%= jitikai.title %>----</div>
                      <% end %>
                      <% @customer.favorite_dusts.each do | dust| %>
                          <div>----<%= dust.title %>----</div>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

          <div class="col-md-3 d-flex mt-3 mb-2 justify-content-between align-items-stretch">
            <h4 class="mb-0">コメント</h4>
              <div class='row'>
                <div class="mt-3">
                  <table class="table">
                    <tbody>
                      <% @customer.post_comments.each do |comment| %>
                          <div><%= link_to "#{comment.post.title} コメント", post_path(comment.post.id) %></div>
                      <% end %>
                      <% @customer.event_comments.each do |comment| %>
                          <div><%= link_to "#{comment.event.title} コメント", event_path(comment.event.id) %></div>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
        </div>

    </div>
  </div>
</div>
