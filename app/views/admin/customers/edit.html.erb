<%= render"layouts/error_messages", model: @customer %>
<div class="container mt-5">
  <div class="col-md-10 mt-5">

    <div class="justify-content-center mb-3">
      <div class="col-md-12 headline">
        <h4><strong><%= @customer.name%></strong>さんの会員情報編集</h4>
      </div>
    </div>

        <%= form_with model: @customer, url:customer_path, method: :patch do |f| %>
          <table class="table table-borderless">
            <thead>
              <tr>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= f.label :氏名,class:"col-form-label" %></td>
                <td><%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control" %></td>
              </tr>
              <tr>
                <td><%= f.label :ニックネーム,class:"col-form-label" %></td>
                <td><%= f.text_field :nickname, autocomplete: "nickname",class:"form-control" %></td>
              <tr>
                 <td><%= f.label :電話番号,class:"col-form-label" %></td>
                 <td><%= f.text_field :phone_number,pattern:"^[0-9][0-9]*$",autocomplete: "phone_number",class:"form-control" %></td>
              </tr>
              <tr>
                 <td><%= f.label :メールアドレス,class:"col-form-label" %></td>
                 <td><%= f.email_field :email, autocomplete: "email",class:"form-control" %></td>
              </tr>
            </tbody>
          </table>

          <div class=" mt-3 text-center">
            <%= f.submit "変更を保存", class: "btn btn-success"%>
          </div>

        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>