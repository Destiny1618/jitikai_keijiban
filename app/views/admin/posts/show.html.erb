<div>
  <p><%= @post.title %></p>
  <p><%= @post.body %></p>
  <% if @post.image.attached? %>
  <%= image_tag @post.get_image %>
  <% end %>
  <p>投稿者：<%= @post.admin.name %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.admin == current_admin %>
    <td><%= link_to "編集", edit_admin_post_path(@post.id) %></td>
    <td><%= link_to "削除", admin_post_path(@post), method: :delete %></td>
  <% end %>
  <% if @post.favorited_by?(current_admin) %>
    <p>
      <%= link_to admin_post_favorite_path(@post.id), method: :delete do %>
        ♥<%= @post.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to admin_post_favorite_path(@post.id), method: :post do %>
        ♡<%= @post.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
  <% end %>
</div>
<div>
  <p>コメント件数：<%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
    <%= post_comment.admin.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
  <% end %>
</div>
<div>
  <%= form_with model: [@post, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
  <% end %>
</div>