<h2>プロフィール編集</h2>
<% if @customer.errors.any? %>
  <%= @customer.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @customer do |f| %>
  <label for="inputName">登録者名</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  <label for="inputNickname">表示名</label>
  <%= f.text_field :nickname, autofocus: true, id:"inputNickname", placeholder:"Nickname"%>
  <label for="inputTelephoneNumber">電話番号</label>
  <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephoneNumber", placeholder:"TelephoneNumber"%>
  <label for="inputEmail">メールアドレス</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%>

  <%= f.submit "更新" %>
<% end %>