<div>
  <p><%= @post.title %></p>
  <p><%= @post.body %></p>
  <% if @post.image.attached? %>
  <%= image_tag @post.get_image %>
  <% end %>
  <p>投稿者：<%= @post.customer.nickname %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if (@post.customer == current_customer) && (@post.!current_customer.guest?) %>
    <td><%= link_to "編集", edit_post_path(@post.id) %></td>
    <td><%= link_to "削除", post_path(@post), method: :delete %></td>
  <% end %>
  <% if !current_customer.guest? %>
  <% if @post.favorited_by?(current_customer) %>
    <p>
      <%= link_to post_favorite_path(@post.id), method: :delete do %>
        ♥<%= @post.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_favorite_path(@post.id), method: :post do %>
        ♡<%= @post.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
  <% end %>
</div>
<div>
  <p>コメント件数：<%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
    <%= post_comment.customer.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
  <% end %>
</div>
<div>
  <% if !current_customer.guest? %>
  <%= form_with model: [@post, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
  <% end %>
</div>