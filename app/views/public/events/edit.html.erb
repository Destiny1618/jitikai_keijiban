<<h1>投稿編集</h1>
<% if @event.errors.any? %>
  <%= @event.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @event, url: event_path(@event), method: :patch  do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit '再投稿' %>

<% end %>

<%= link_to "詳細", event_path(@event.id) %>
